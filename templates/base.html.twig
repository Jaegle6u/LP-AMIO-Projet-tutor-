    <body>

    {# Header du site #}
        {% block header %}
            <nav>
		        <h1>
                    {% if serre[0] is defined %}
                      Potanet | {{ serre[0].nom }}
                    {% elseif plant[0] is defined %}
                        Potanet | {{plant[0].serre.nom}} | {{ plant[0].espece }}
                    {% else %}
                        Potanet
                    {% endif %}
                </h1>
                <div>
                
                     <a href="{{ path('homepage' )}}" class="btn "><i class="fas fa-home bouton_nav" ></i></a>
                     {% if not controller_name is defined or(controller_name is defined and controller_name != "RapportController") %}
                     <a href="{{ path('rapport' )}}" class="btn "><i class="fas fa-newspaper bouton_nav" ></i></a>
                     {% endif %}
                     {% if controller_name is defined and ( controller_name == 'CoreController' or controller_name == 'PlantController' or controller_name =='PlanteController' or controller_name == 'RapportController') or route_name is defined %}
                     <i class="fas fa-bars bouton_nav btn" id="btn_panneau_lateral" ></i>
                     {% endif %}
                </div>
                

	        </nav>
        {% endblock %}

        {% block body %}{% endblock %}
